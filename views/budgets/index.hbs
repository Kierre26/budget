<h1 class="my-4">Budgets</h1>
<div class="mb-3 text-end">
  {{!-- Link to create a new budget --}}
  <a href="/budgets/new" class="btn btn-primary">
    {{!-- Plus icon for button --}}
    <i class="bi bi-plus-lg"></i> 
  </a>
</div>
<ul class="list-group shadow-sm">
  {{!-- List of each budgets --}}
  {{#each budgets}}
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <div>
        <strong>{{this.title}}</strong>: Limit ${{this.limit}} â€” Remaining ${{this.remaining}}
      </div>
      {{!-- Budget info --}}
      <div class="btn-group btn-group-sm">
        {{!-- Edit button --}}
        <a href="/budgets/{{this.id}}/edit" class="btn btn-outline-secondary">
          <i class="bi bi-pencil"></i>
        </a>
        {{!-- Delete button --}}
        <form action="/budgets/{{this.id}}?_method=DELETE" method="POST">
          <button class="btn btn-outline-danger">
            <i class="bi bi-trash"></i>
          </button>
        </form>
      </div>
    </li>
  {{/each}}
</ul>
